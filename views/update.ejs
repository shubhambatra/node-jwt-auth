<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node JWT Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="row">
		<form action="/logout" method="get">
			<button type="submit" class="btn btn-info pull-right btn-lg">Logout</button>
		</form>
	</div>
	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
		</div>
		<div class="col-sm-6">
		<form action="/update" method="post">
			<input type="hidden" class="form-control" name="id" required="required" value=<%= body.id %>>
			<div class="form-group">
				<label>Name</label>
				<input type="text" class="form-control" name="name" required="required" value="<%= body.name %>">
			</div>
			<div class="form-group">
				<label>Address</label>
				<input type="text" class="form-control" name="email" required="required" value=<%= body.email%>>
			</div>

			<button type="submit" class="btn btn-primary btn-lg">Update</button>
		</form>
		</div>

	</div>

</div>
</body>
</html>