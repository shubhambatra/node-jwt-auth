<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node JWT Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="row">
		<form action="/logout" method="get">
			<button type="submit" class="btn btn-info pull-right btn-lg">Logout</button>
		</form>
		<% if (message.length > 0) { %>
			<div class="alert alert-danger"><%= message %></div>
		<% } %>
	</div>
	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<% if (emails.length > 0) { 
				for (var i=0; i < emails.length ; i++ ){ %>
					<div class="row well">
						<div class= "col-md-8">

							Name : <%= emails[i].name %>
							<br />
							Email : <%= emails[i].email %>
						</div>
						<div class="col-md-2">
							<form action="/delete/" method="post">
								<input type="hidden" class="form-control" name="id" value=<%= emails[i]._id%>>
								<button type="submit" class="btn btn-danger btn-lg pull-right fa fa-trash-o"></button>
							</form>
						</div>
						<div class="col-md-2">
							<form action="/update" method="get">
								<input type="hidden" class="form-control" name="id" value=<%= emails[i]._id%>>
								<input type="hidden" class="form-control" name="name" value="<%= emails[i].name%>">
								<input type="hidden" class="form-control" name="email" value=<%= emails[i].email%>>
								<button type="submit" class="btn btn-primary btn-lg pull-right fa fa-pencil"></button>
							</form>
						</div>
					</div>
				<% }
			} %>
		</div>
		<div class="col-sm-6">
		<form action="/add" method="post">
			<div class="form-group">
				<label>Name</label>
				<input type="text" class="form-control" name="name" required="required">
			</div>
			<div class="form-group">
				<label>Address</label>
				<input type="text" class="form-control" name="email" required="required">
			</div>

			<button type="submit" class="btn btn-primary btn-lg">Add</button>
		</form>
		</div>

	</div>

</div>
</body>
</html>